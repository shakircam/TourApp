<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:orientation="vertical">

    <LinearLayout

        android:orientation="vertical"
        android:background="#2D919494"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginTop="25dp"
            android:id="@+id/tourNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tour Title"

            android:textSize="20dp"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/tourDescriptionET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tour Description"
            android:textSize="20dp"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:singleLine="true" />


        <EditText
            android:id="@+id/budgetET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:drawableRight="@drawable/taka"
            android:hint="Tour Budget"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <EditText
            android:id="@+id/startDP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_event_note_black_24dp"
            android:hint="Start Date"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/endDP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_event_note_black_24dp"
            android:hint="End Date"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:singleLine="true" />


        <Button
            android:id="@+id/saveTrip"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="#CDDC39"
            android:layout_marginLeft="100dp"
            android:baselineAligned="false"
            android:text="Save "
            android:textSize="25dp" />

    </LinearLayout>



</LinearLayout>